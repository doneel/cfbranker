body{
	background-image: url(<%= asset_path 'noisy-texture.png' %>);
}

@font-face{
	font-family: fridayNightLights;
	src: url(<%= asset_path 'FNL_DEMO-KCFonts.ttf' %>);
}


.bigIcon{
	font-size: 30px;
	height: 50%;
	text-decoration: none;
	color: black;
}

.bannerIcon{
	margin-left: 30px;
	float: right;
	font-size: 40px;
	margin-top: 10px;
	text-decoration: none;
	color: #111;
}

.bannerIcon:hover{
	color: #2F6ED7;
}

.banner{
        border-bottom: 1px solid black;
        margin-bottom: 5px;
        height: 60px;
}

.bannerText{
        margin-top: 8px;
        margin-left: 5px;
        position: absolute;
        display: inline;
        font-size: 60px;
        font-family: fridayNightLights;

        background: -webkit-linear-gradient(gray, #fffc3d, gray);

        color: #cfcc1d;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-decoration: none;
}

.saveBar{
    float: left;
    height: 100%;
    width: 27%;
    /*border-left: 1px solid black;*/
    border-top: 1px solid black;
}

.saveEntry{
    width: 100%;
    height: 60px;
    background: rgba(20, 20, 20, .5);
    box-shadow:inset 0px 1px 22px 0px #1c1c1c;
    position: relative;
    overflow: hidden;
    border-bottom: 1px solid black;
    border-left: 1px solid black;
    -webkit-user-select: none; /* Chrome/Safari */
    -moz-user-select: none; /* Firefox */
    -ms-user-select: none; /* IE10+ */
}

.newSaveEntryButton{
    width: calc(100% - 0px);
    height: 40px;
    background: rgba(20, 20, 20, .5);
    box-shadow:inset 0px 1px 22px 0px #1c1c1c;
    position: relative;
    overflow: hidden;
    border-bottom: 1px solid black;
    border-top: 1px solid black;
    border-left: 1px solid black;
    -webkit-user-select: none; /* Chrome/Safari */
    -moz-user-select: none; /* Firefox */
    -ms-user-select: none; /* IE10+ */
}

.saveListWrapper{
    position: absolute;
    height: calc(100% - 43px);
    overflow:hidden;
    width: 100%;
}

.saveList{
    height: 100%;
    width: calc(100% + 16px);
    overflow-y: scroll;
    overflow-x: hidden;
}

.newSaveName{
    font-size: 16px;
    font-weight: bold;
    color: #555;
    position: absolute;
    margin: 0;
    left: 55px;
    top: calc(50% - 8px);
}

.saveEntryNewName{
    position: absolute;
    width: 200px;
    left: calc(50% - 100px);
    top: calc(50% - 15px);
    height: 30px;
    padding-left: 2px;
    color: #AAA;
    margin: 0 auto;
    border: none;
    background: rgba(200, 200, 200, .1);
}

.newSaveIcon{
    font-size: 30px;
    float: right;
    position: absolute;
    right: 50px;
    top: calc(50% - 15px);
}

.resultsPanel{
    height: calc(100% - 2px);
    width: calc(100% - 1px);
    background: none;
    border: 1px solid black;
    border-left: none;
    overflow: hidden;
}
.saveEntry.selected{
    background-color: #222;
    box-shadow:inset 0px 1px 12px 0px #AcAc5c;
}

.newSaveEntryButton:hover .newSaveName{
    color: #2F6ED7;
}
.newSaveEntryButton:hover, .saveEntry:hover .newSaveIcon{
    color: #2F6ED7;
}

.saveEntryName{
    font-family: Georgia;
    font-weight: bold;
    margin: 2px;
    margin-top: 5px;
    color: #555;
}

.saveEntryDate{
    font-size: 11px;
    margin: 2px;
    color: #555;
}

.saveEntry:hover{
    box-shadow:inset 0px 1px 12px 0px #AcAcAc;
}

.bigTrashIcon{
    position: absolute;
    top: 2px;
    right: 2px;
    font-size: 30px;
    color: #555;
}

.bigTrashIcon:hover{
    color: #A01010;
}

.workPane{
    height: 100%;
    overflow: hidden;
}

.controlBar{
    height: 40px;
    width: auto;
    box-shadow:inset 0px 1px 22px 0px #1c1c1c;
    background: rgba(20, 20, 20, .50);
    border-bottom: 1px solid black;
    border-left: 1px solid black;
    border-right: 1px solid black;
}

.hidden{
    display: none;
}

.leftSide{
    float: left;
    height: 100%;
    width: 78%;
}
.rightSide{
    float: left;
    background: gray;
    height: 100%;
    width: 22%;
}

.interface{
	height: calc(100% - 70px);
}

body, html{
    height: 100%;
}

#codeEditorContainer{
	height: calc(100% - 43px);
    border: 1px solid black;
}

.controlsCenteringDiv{
    margin: 0 auto;
    width: 557px;
    height: 100%;
}

.controlButton{
    /*
    top: 0px;
    margin-top: 3px;
    margin-left: 10px;
    margin-right: 10px;
    */
    -moz-box-shadow:inset 0px 1px 22px 0px #3c3c3c;
    -webkit-box-shadow:inset 0px 1px 22px 0px #3c3c3c;
    box-shadow:inset 0px 1px 22px 0px #1c1c1c;
    background: rgba(20, 20, 20, .8);
/*    background:-webkit-gradient( linear, left top, left bottom, color-stop(0.05, #333), color-stop(1, #444) );
    background:-moz-linear-gradient( center top, #9ea9b0 5%, #d2e7fa 100% );
*/
    filter:progid:DXImageTransform.Microsoft.gradient(startColorstr='#9ea9b0', endColorstr='#d2e7fa');
    -webkit-border-top-left-radius:0px;
    -moz-border-radius-topleft:0px;
    border-top-left-radius:0px;
    -webkit-border-top-right-radius:0px;
    -moz-border-radius-topright:0px;
    border-top-right-radius:0px;
    -webkit-border-bottom-right-radius:0px;
    -moz-border-radius-bottomright:0px;
    border-bottom-right-radius:0px;
    -webkit-border-bottom-left-radius:0px;
    -moz-border-radius-bottomleft:0px;
    border-bottom-left-radius:0px;
    text-indent:0;
    border: 1px solid black;

    display:inline-table;

    color: #777;
    font-family:Trebuchet MS;
    font-size:15px;
    font-weight:bold;
    font-style:normal;
    height:26px;
    line-height:26px;
    width:104px;
    text-decoration:none;
    text-align:center;
}
.controlButton:hover {
    border:1px solid #5c5c5c;
    box-shadow:inset 0px 1px 22px 0px #5c5c5c;
   /* background:-webkit-gradient( linear, left top, left bottom, color-stop(0.05, #d2e7fa), color-stop(1, #9ea9b0) );
    background:-moz-linear-gradient( center top, #d2e7fa 5%, #9ea9b0 100% );
    filter:progid:DXImageTransform.Microsoft.gradient(startColorstr='#d2e7fa', endColorstr='#9ea9b0');
    background-color:#d2e7fa;
    */
}.controlButton:active {
    position:relative;
    top:1px;
}

.selectBox{
    margin-top: -5px;
    height: 28px;
    width: 60px;
    background: rgba(20, 20, 20, .8);
    color: #777;
    font-weight: bold;
    border: 1px solid black;
}

option.selectBoxOption{
    height: 25px;
    border: 1px solid black;
}

.selectBoxLabel{
    display:inline-table;
    margin-left: 10px;
    margin-top: 5px;
    font-weight: bold;
    color: #555;
}

.dialog.active, .modalBackground.active, #loginBackground.active, #helpBackground.active, #infoBackground.active, #loginDialog.active, #helpDialog.active, #infoDialog.active{
     display: block;
}

.dialog{
    background-color: rgba(20, 20, 20, 0.9 );
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    border-radius: 10px;

    -webkit-box-shadow: 0 0 20px 0 #222;
    -moz-box-shadow: 0 0 20px 0 #222;
    box-shadow: 0 0 20px 0 #222;
    color: #AAA;

    width: 500px;

    display: none;
    left: 30%;
    top: 5%;
    padding: 10px;
    position: absolute;
    z-index: 1000;
}

#loginDialog {
    background-color: rgba(20, 20, 20, 0.8 );
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    border-radius: 10px;

    -webkit-box-shadow: 0 0 20px 0 #222;
    -moz-box-shadow: 0 0 20px 0 #222;
    box-shadow: 0 0 20px 0 #222;
    color: #AAA;
    font-weight: bolder;

    height: 100px;
    width: 300px;

    display: none;
    left: 50%;
    margin: -120px 0 0 -160px;
    padding: 10px;
    position: absolute;
    top: 50%;
    z-index: 1000;
}

#infoDialog{
    background-color: rgba(20, 20, 20, 0.9 );
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    border-radius: 10px;

    -webkit-box-shadow: 0 0 20px 0 #222;
    -moz-box-shadow: 0 0 20px 0 #222;
    box-shadow: 0 0 20px 0 #222;
    color: #AAA;

    width: 500px;

    display: none;
    left: 30%;
    top: 5%;
    padding: 10px;
    position: absolute;
    z-index: 1000;
}

#helpDialog{
    background-color: rgba(20, 20, 20, 0.95 );
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    border-radius: 10px;

    -webkit-box-shadow: 0 0 20px 0 #222;
    -moz-box-shadow: 0 0 20px 0 #222;
    box-shadow: 0 0 20px 0 #222;
    color: #AAA;

    height: 400px;
    width: 500px;

    left: 40%;
    top: 35%;
    display: none;
    margin: -120px 0 0 -160px;
    padding: 10px;
    position: absolute;
    z-index: 1000;
}

.modalBackground{
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(20, 20, 20, 0.8 );
    opacity: .50;
    -webkit-opacity: .5;
    -moz-opacity: .5;
    z-index: 1000;
}


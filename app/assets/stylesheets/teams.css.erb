@font-face{
    font-family: franchise;
    src: url(<%= asset_url 'Franchise-Bold-hinted.ttf' %>);
}

.franchise-font{
    font-family: franchise;
}

.shares-rankings-wrapper{
    height: calc(100% - 60px);
}

.rankingsWrapper{
	width: 100%;
	height: 100%;
	overflow: hidden;
}

.rankings{
	width: calc(100% + 15px);
	overflow-y :scroll;
	height: 100%;
}

.showCodeButton{
    text-size: 18px;
    height: 10px;
}

.code-container{
    width: 800px;
    height: calc(100% - 12px - 60px);
    float: left;
    margin: 50px;
    border: 1px solid black;
    margin-top: 0px; 
    margin-bottom: 10px;
}

#editor-div{
    height: 100%;
}

.code-container-hidden{
    display: none;
}



.showCodeButton:hover{
    color: #2F6ED7;
    opacity: 1;
    cursor: pointer;
}

.results-centered{
    margin-left: calc(50% - 150px);
}

.results-sided{
}


.dateLabel:hover{
    opacity: 1;
}

.date-arrow{
    position: absolute;
    height: 100%;
    width: 50px;
    top: 3px;
    color: #AAA;
    opacity: 1;
    font-size: 40px;
}

.date-arrow:hover{
    color: #2F6ED7;
}

.left-date-arrow{
    left: 0px;
}

.right-date-arrow{
    right: 0px;
}
.resultsWrapper{
    overflow: hidden;
    height: calc(100% - 12px);
    float: left;
    width: 300px;
    /*margin-top: 10px; */
    margin-bottom: 10px;
    border: 1px solid black;
}

.resultsWeekLabel{
    
	position: relative;
	height: 35px;
	border-bottom: 1px solid black;
	border-top: 1px solid black;
	background-color: rgba(20, 20, 20, .5);
	margin-top: -1px;
	opacity: .5;
	-webkit-user-select: none; /* Chrome/Safari */
	-moz-user-select: none; /* Firefox */
	-ms-user-select: none; /* IE10+ */

	/* Rules below not implemented in browsers yet */
	-o-user-select: none;
	user-select: none;
        
        font-family: franchise;
	font-size: 24px;
        color: #AAA;
        text-align:center;
        padding-top: 14px;
}

.teamTile{
	overflow: hidden;
	position: relative;
	height: 40px;
	border-bottom: 1px solid black;
	border-top: 1px solid black;
	background-color: rgba(20, 20, 20, .5);
	margin-top: -1px;
	opacity: .5;
	-webkit-user-select: none; /* Chrome/Safari */
	-moz-user-select: none; /* Firefox */
	-ms-user-select: none; /* IE10+ */

	/* Rules below not implemented in browsers yet */
	-o-user-select: none;
	user-select: none;
}

.teamTile:hover{
	opacity: 1;
	cursor: pointer;
}

.numberingDiv{
	float: left;
	height: 100%;
	left: 0px;
	border-right: 1px double black;
	width: 40px;

}

.rankNumber{
	font-family: franchise;
	font-size: 18px;
	font-weight: bold;
	margin: 0px;
	margin-top: 11px; /*calc(50% - 9px);*/
	margin-right: 5px;
	color: #AAA;
	float: right;
}

.teamSide{
	float: right;
	width: calc(100% - 42px);
	height: 100%;
	position: relative;
}

.teamName{
	font-family: franchise;
	position: absolute;
	width: calc(100% - 40px);
	font-size: 25px;
	color: #AAA;
	margin: 0;
	left: 40px;
	margin-top: 9px;
	margin-left: 15px;
}

.teamLogo{
	position: absolute;
	left: 5px;
	height: 40px;
        width: 40px;
}

.flashMessage{
	background-color: rgba(100, 30, 30, .4);
	border: 1px solid #0F0202;
	font-family: Arial sans-serif;
	color: #DDD;
	font-size: 20px;
	padding: 10px;
	margin: 5px;
}

body, html{
	height: 100%;
	margin: 0;
}

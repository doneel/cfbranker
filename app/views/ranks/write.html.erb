<div class="interface">
    <div class="leftSide">
	    <div class="saveBar">
        </div>
        <div class="workPane">
            	<div id="codeEditorContainer">
            	</div>
                <div class="controlBar">
                    <table class="controlsCenteringDiv">
                        <tbody>
                            <tr>
                                <td><a class="controlButton" id="saveButton" onclick="saveCode()">Save</a></td>
                                <td><a class="controlButton" onclick="runAlgorithm()">Run</a></td>
